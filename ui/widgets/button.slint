export component CustomButton inherits Rectangle{
    in-out property <bool> dark:true;
    in-out property <brush> bg: dark?#3737377f:#efefef7f;
    in-out property <brush> br-color: dark?#ffffff9f:#2222229f;
    in-out property <brush> text-color: dark?#dedede:#010101;
    in-out property <length> font-size: 14px;
    in-out property <string> text: "Button";
    out property <bool> has-hover<=>touch.has-hover;
    out property <bool> pressed<=>touch.pressed;
    callback clicked();
    background: touch.has-hover?touch.pressed?@linear-gradient(0deg,bg.transparentize(3%),bg):@linear-gradient(0deg,bg.transparentize(3%),bg).transparentize(4%):@linear-gradient(0deg,bg.transparentize(3%),bg).transparentize(6%);
    border-radius: 4px;
    border-width: 1px;
    border-color: touch.has-hover?touch.pressed?@linear-gradient(0deg,br-color.transparentize(3%),br-color).transparentize(0.1):@linear-gradient(0deg,br-color.transparentize(3%),br-color):@linear-gradient(0deg,br-color.transparentize(3%),br-color).transparentize(0.2);
    label:=Text {
        text: text;
        color: touch.has-hover?touch.pressed?text-color:text-color.transparentize(0.1):text-color.transparentize(0.15);
        font-size: font-size;
        animate color{
            duration: 200ms;
            easing: ease-in-out;
        }
    }
    touch:=TouchArea {
        clicked => {
            clicked();
        }
    }
    animate background,border-color{
        duration: 200ms;
        easing: ease-in-out;
    }
}