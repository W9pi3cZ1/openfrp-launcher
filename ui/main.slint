import "../fonts/MiSans-Bold.otf";
import "../fonts/MiSans-Demibold.otf";
import "../fonts/MiSans-ExtraLight.otf";
import "../fonts/MiSans-Heavy.otf";
import "../fonts/MiSans-Light.otf";
import "../fonts/MiSans-Medium.otf";
import "../fonts/MiSans-Normal.otf";
import "../fonts/MiSans-Regular.otf";
import "../fonts/MiSans-Semibold.otf";
import "../fonts/MiSans-Thin.otf";

import { CustomWindow } from "custom-window.slint";
import { OpenFrpAPIWatermark } from "openfrp-api-watermark.slint";
import { ListView , Slider} from "std-widgets.slint";
import { HomePage } from "home-page.slint";
import { SettingsPage } from "settings-page.slint";

component SideBarItem inherits Rectangle {
    in-out property <bool> active;
    callback activate();
    out property <bool> has-hover;
    has-hover <=> touch.has-hover;

    GridLayout {
        @children
    }

    touch:=TouchArea {
        clicked => { root.activate(); }
    }
}

export component MainPage inherits CustomWindow {
    border-color: @linear-gradient(135deg,#0060bf,#bf0020).brighter(25%);
    min-height: 320px;
    min-width: 320px;
    property <int> active_page: 0;
    default-font-family: "MiSans";
    title: "OpenFrp Launcher a0.0.130";
    // title: "Slint Demo";
    // icon: @image-url("../res/icon.png");
    border-radius: 4px;
    preferred-width: 480px;
    preferred-height: 320px;
    callback close_win();
    callback move_win(length,length);

    close => {
        close_win();
    }

    move(offset_x,offset_y) => {
        move_win(offset_x,offset_y);
    }

    VerticalLayout {
        alignment: end;
        HorizontalLayout {
            alignment: end;
            OpenFrpAPIWatermark {

            }
        }
    }

    HorizontalLayout {
        sidebar:= Rectangle {
            background: #0000000f;
            property <length> padding-y: 16px;
            width: 128px;
            // background: black;
            function item-y(index:int,backward:bool) -> length{
                if(backward){
                    return self.height - padding-y - (index + 1) * 45px;
                }else{
                    return padding-y + index * 45px;
                }
            }
            
            for items[index] in [
                {text:"首页",backward:false,index:0,icon:@image-url("../res/home.svg")},
                {text:"隧道",backward:false,index:1,icon:@image-url("../res/tunnel.svg")},
                {text:"控制台",backward:false,index:2,icon:@image-url("../res/console.svg")},
                {text:"设置",backward:true,index:0,icon:@image-url("../res/settings.svg")},
            ]: SideBarItem {
                activate => {
                    root.active-page = index;
                }
                x:0;
                y: items.backward?item-y(items.index,true):item-y(items.index,false);
                width: parent.width;
                height: self.min-height;
                border-radius: root.border-radius;
                background: self.has-hover?#00000007:transparent;
                animate background {
                    duration: 250ms;
                    easing: cubic-bezier(0.75, 0.0, 0.25, 1);
                }
                Rectangle {
                    background: root.active-page==index?#0000001f:transparent;
                    border-radius: root.border-radius;
                    HorizontalLayout {
                        padding: 12px;
                        padding-left: 16px;
                        padding-right: 16px;
                        spacing: 12px;
                        alignment: space-between;
                        icon:=Image {
                            height: title.min-height;
                            width: title.min-height;
                            source: items.icon;
                            colorize: (root.active-page==index)?root.border-color:root.border-color.darker(100%);
                            animate colorize {
                                duration: 250ms;
                                easing: cubic-bezier(0.75, 0.0, 0.25, 1);
                            }
                        }
                        title:=Text {
                            font-weight: 500;
                            text: items.text;
                            font-size: 12px;
                            color: (root.active-page==index)?root.border-color:root.border-color.darker(100%);
                            animate color {
                                duration: 250ms;
                                easing: cubic-bezier(0.75, 0.0, 0.25, 1);
                            }
                        }
                    }
                    animate background {
                        duration: 250ms;
                        easing: cubic-bezier(0.75, 0.0, 0.25, 1);
                    }
                }
            }
        }
        main-view:= Rectangle{
            Rectangle {
                HomePage {
                    opacity: root.active-page==0?1:0;
                    animate opacity {
                        duration: 250ms;
                        easing: cubic-bezier(0.75, 0.0, 0.25, 1);
                    }
                }
                Text {
                    text: "我是隧道";
                    opacity: root.active-page==1?1:0;
                    animate opacity {
                        duration: 250ms;
                        easing: cubic-bezier(0.75, 0.0, 0.25, 1);
                    }
                }
                Text {
                    text: "我是控制台";
                    opacity: root.active-page==2?1:0;
                    animate opacity {
                        duration: 250ms;
                        easing: cubic-bezier(0.75, 0.0, 0.25, 1);
                    }
                }
                SettingsPage {
                    win-opacity <=> root.win-opacity;
                    opacity: root.active-page==3?1:0;
                    animate opacity {
                        duration: 250ms;
                        easing: cubic-bezier(0.75, 0.0, 0.25, 1);
                    }
                }
            }
        }
    }
    

    
}